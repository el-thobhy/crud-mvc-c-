@using AplikasiKota.Web.ViewModel
@model KotaViewModel
@{
    Layout = null;
}
<form asp-action="Edit" method="post" id="formEditKota">
    <div class="card">
        <div class="h4 card-header">@ViewBag.Title</div>
        <div class="card-body">
            <input type="hidden" value="@Model.Id" class="form-control" id="id" name="id">
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Nama Kota</label>
                <div class="col-sm-8">
                    <input type="text" value="@Model.NamaKota" class="form-control" id="namaKota" name="namaKota">
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Kode Kota</label>
                <div class="col-sm-8">
                    <input type="text" value="@Model.KodeKota" class="form-control" id="kodeKota" name="kodeKota">
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>

    </div>
</form>

<script>

    $("#formEditKota").submit(function (e) {
        // disable form submit
        e.preventDefault()

        $.ajax({
            url: "/Kota/Edit",
            type: "post",
            data: $("#formEditKota").serialize(),
            beforeSend: function () {
                // Loader

            },
            success: function (response) {
                location.reload();
            },
            error: function (errResponse) {
                alert(@ViewBag.Message);
            }
        })

    })
</script>