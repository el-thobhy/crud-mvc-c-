@using AplikasiKota.Web.ViewModel
@model KecamatanViewModel
@{
    Layout = null;
}
<form asp-action="Edit" method="post" id="formEditKecamatan">
    <div class="card">
        <div class="h4 card-header">@ViewBag.Title</div>
        <div class="card-body">
            <input type="hidden" value="@Model.Id" class="form-control" id="id" name="id">
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Nama Kecamatan</label>
                <div class="col-sm-8">
                    <input type="text" value="@Model.NamaKecamatan" class="form-control" id="namaKecamatan" name="namaKecamatan">
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Kode Kecamatan</label>
                <div class="col-sm-8">
                    <input type="text" value="@Model.KodeKecamatan" class="form-control" id="kodeKecamatan" name="kodeKecamatan">
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">ID Kota</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" value="@Model.IdKota" id="idKota" name="idKota">
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>

    </div>
</form>

<script>

    $("#formEditKecamatan").submit(function (e) {
        // disable form submit
        e.preventDefault()

        $.ajax({
            url: "/Kecamatan/Edit",
            type: "post",
            data: $("#formEditKecamatan").serialize(),
            beforeSend: function () {
                // Loader

            },
            success: function (response) {
                location.reload();
            },
            error: function (errResponse) {
                alert(@ViewBag.Message);
            }
        })

    })
</script>