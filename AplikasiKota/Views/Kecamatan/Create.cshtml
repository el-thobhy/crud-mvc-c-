﻿@{
    Layout = null;
}
<form asp-action="Create" method="post" id="formCreateKecamatan">
    <input type="hidden" name="CreateBy" value="admin" />
    <div class="card">
        <div class="h4 card-header">@ViewBag.Title</div>
        <div class="card-body">
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Nama Kecamatan</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="namaKecamatan" name="namaKecamatan">
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Kode Kecamatan</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="kodeKecamatan" name="kodeKecamatan">
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">ID Kota</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="idKota" name="idKota">
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>

    </div>
</form>

<script>

    $("#formCreateKecamatan").submit(function (e) {
        // disable form submit
        e.preventDefault()

        $.ajax({
            url: "/Kecamatan/Create",
            type: "post",
            data: $("#formCreateKecamatan").serialize(),
            beforeSend: function () {
                // Loader

            },
            success: function (response) {
                location.reload();
            },
            error: function (errResponse) {
                alert(@ViewBag.Message);
            }
        })

    })
</script>